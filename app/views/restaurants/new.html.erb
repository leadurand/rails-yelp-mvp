<h1>Create a new Restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= form_for @restaurant do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number %>
        </div>

        <div class="form-group">
          <%= f.label :category %>
          <%= f.text_field :category, collection: Restaurant::CATEGORIES %>
        </div>

        <div class="form-group">
          <%= f.submit 'create the restaurant', class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
    <%= link_to 'Restaurants\'list', restaurants_path, class: 'btn btn-primary text-align' %>
</div>



