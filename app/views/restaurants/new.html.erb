
<div class="container center-block>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
      <h1>Create a new Restaurant</h1>
        <%= simple_form_for(@restaurant) do |f| %>
          <%= f.error_notification %>

          <%= f.input :name, label: "your name" %>
          <%= f.input :address, label: "your address" %>
          <%= f.input :phone_number, label: "your phone number" %>
          <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], label: "select category" %>

          <%= f.button :submit, class: 'btn btn-info form' %>
        <% end %>
    <%= link_to 'Restaurants\'list', restaurants_path, class: 'btn btn-warning' %>
    </div>
  </div>
</div>



